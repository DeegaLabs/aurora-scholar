# ===========================================
# Aurora Scholar - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:password@localhost:5432/aurora_scholar"

# Solana
NEXT_PUBLIC_SOLANA_NETWORK="devnet"
NEXT_PUBLIC_SOLANA_RPC="https://api.devnet.solana.com"
SOLANA_PRIVATE_KEY=""

# Arweave/Irys
IRYS_NODE="https://devnet.irys.xyz"
IRYS_PRIVATE_KEY=""

# AI Assistant (choose one)
OPENAI_API_KEY=""
# ANTHROPIC_API_KEY=""

# API Configuration
PORT=3001
NEXT_PUBLIC_API_URL="http://localhost:3001"

# Security
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
ACCESS_TOKEN_EXPIRY="7d"

# Feature Flags
ENABLE_AI_ASSISTANT=true
ENABLE_PRIVATE_ARTICLES=true
